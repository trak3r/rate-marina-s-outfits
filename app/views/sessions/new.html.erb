<%= title "Log in with your YouTube account name and password.", :h2 %>
<div id="disclaimer">
  We do not store your password, we simply pass it along to YouTube to verify your credentials.
</div>
<% form_tag session_path do %>

<div class="row half">
  <%= label_tag 'login', 'Username' %>
  <%= text_field_tag 'login', @login %>
</div>
<div class="row half">
  <%= label_tag 'password' %>
  <%= password_field_tag 'password', nil %>
</div>
<div class="row half">
  <label>
    <%= check_box_tag 'remember_me', '1', @remember_me %>
    Remember me
  </label>
</div>

<div class="clear"></div>

<div class="buttons clear">
  <%= submit_tag 'Login' %>
</div>
<% end -%>
